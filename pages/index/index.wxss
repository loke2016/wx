.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background-color: #f7f7f7;
}

.header {
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  flex: 1;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.load-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
}

.load-more text, .no-more text {
  font-size: 24rpx;
  color: #999;
} 