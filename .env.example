# 基础设置
PROJECT_NAME=家庭共享相册
API_V1_STR=/api
SECRET_KEY=替换为你自己的密钥_至少32个字符长度的随机字符串
CORS_ORIGINS=*

# 数据库设置
POSTGRES_SERVER=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=family_album

# Redis设置
REDIS_SERVER=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# MinIO设置
MINIO_SERVER=minio
MINIO_PORT=9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_SECURE=false
MINIO_PHOTO_BUCKET=photos
MINIO_THUMBNAIL_BUCKET=thumbnails

# 存储配置
MAX_PHOTO_SIZE=10485760  # 10MB
DEFAULT_QUOTA_BYTES=10737418240  # 10GB

# 敏感图片检测设置
ENABLE_IMAGE_SCAN=false
